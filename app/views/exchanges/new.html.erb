<div class =" text-center ">
  <div class="jumbotron">
    <h2 >Exchange of books</h2>
  </div>
  <h4 ><%= "The book named #{@book.title.upcase} a was shared by #{@user.username} " %></h4>

  <%= form_with(model: [ @book, @book.exchanges.build ], local: true) do |form|  %>
    <div class="form-group ">
      <h4 >Please Select Book</h4>
      <%= form.select(:offer_book_id, @books.map{|book| [book.title, book.id]},{},{:class=>" col-4 center"})%>
    </div>
    <button type="submit" class="btn btn-secondary ">Submit</button>
  <% end %>
 
</div>
<%= link_to 'Back to Home', root_path %>